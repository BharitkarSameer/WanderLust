 <% layout('layout/boilerplate') -%>

 <div class="newform">
    <h2>Edit Listing</h2>
    <form method="post" action="/listings/<%=listing._id %>/edit?_method=PUT" enctype="multipart/form-data">
        <div class="newformtitle">
            <label for="newformtitle">Title</label><br>
            <input id="newformtitle" type="text" placeholder="Add a catchy title" name="title" value="<%= listing.title %>" required>
        </div>
        <div class="newformdescription">
            <label for="newformdescription">Description</label><br>
            <textarea id="newformdescription" type="text" name="description" required><%= listing.description %></textarea>
        </div>
        <div class="previewimage">
            <img src="<%= originalImageUrl %>">
        </div>
        <div class="form-group">
            <label for="image">Image</label>
            <input type="file" id="image" name="image" class="form-control-file">
        </div>
        <div class="newformpriceandcountry">
            <div class="newformprice">
                <label for="newformprice">Price</label><br>
                <input id="newformprice" type="text" placeholder="enter price" name="price" value="<%= listing.price %>" required>
            </div>
            <div class="newformcountry">
                <label for="newformcountry">Country</label><br>
                <input id="newformcountry" type="text" placeholder="enter the country" name="country" value="<%= listing.country %>" required>
            </div>            
        </div>
        <div class="newformlocation">
            <label for="newformlocation">Location</label><br>
            <input id="newformlocation" type="text" placeholder="enter location" name="location" value="<%= listing.location %>" required>
        </div>
        <div class="categorydropdown">
            <label for="category">Category:</label>
            <select name="category" id="category" required>
            <option value="<%= listing.category %>"><%= listing.category %></option>
            <option value="Beach">Beach</option>
            <option value="Mountain">Mountain</option>
            <option value="Treehouse">Treehouse</option>
            <option value="Skiing">Skiing</option>
            <option value="Urban">Urban</option>
            <option value="Villa">Villa</option>
            <option value="Lakefront">Lakefront</option>
            <option value="Historic">Historic</option>
            <option value="Desert">Desert</option>
            <option value="Island">Island</option>
            <option value="General">Other</option>
            </select>
        </div>

        <button class="btn btn-add">Edit</button>


    </form>
 </div>